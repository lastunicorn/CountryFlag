                    </TransformGroup>
                </Polygon.RenderTransform>

            </Polygon>

        </Canvas>

        <Canvas>

            <Canvas.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="-72" />
                    <ScaleTransform ScaleX="7.75" ScaleY="7.75" />
                    <TranslateTransform X="24" Y="18" />
                </TransformGroup>
            </Canvas.RenderTransform>

            <Polygon
                Fill="#ED1C27"
                Points="0,0 0,1 .5,1">

                <Polygon.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="18" />
                        <TranslateTransform X="0" Y="-1" />
                    </TransformGroup>
                </Polygon.RenderTransform>

