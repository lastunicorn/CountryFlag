                        <TranslateTransform X="0" Y="-1" />
                        <ScaleTransform ScaleX="-1" CenterY="1" />
                    </TransformGroup>
                </Polygon.RenderTransform>

            </Polygon>

        </Canvas>

        <Canvas>

            <Canvas.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="144" />
                    <ScaleTransform ScaleX="7.75" ScaleY="7.75" />
