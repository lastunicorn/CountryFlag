<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Liberia -->

    <Canvas x:Key="CountryFlag_LR" Width="209" Height="110">

        <Rectangle
            Width="209"
            Height="110"
            Canvas.Left="0"
            Canvas.Top="0"
            Fill="#bf0a30" />

        <Path
            Data="M0,15H209 m0,20H0"
            Stroke="#fff"
            StrokeThickness="10" />

        <Rectangle
            Width="50"
            Height="55"
            Canvas.Left="0"
            Canvas.Top="0"
            Fill="#002868" />

        <Path
            Data="M0,55H209 m0,20H0 M0,95H209"
            Stroke="#fff"
            StrokeThickness="10" />

        <Canvas>

            <Canvas.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="15" ScaleY="15" />
                    <TranslateTransform X="25" Y="25" />
                </TransformGroup>
            </Canvas.RenderTransform>

            <!-- Star - top arm -->

            <Polygon
                Fill="#fff"
                Points="0,0 0,1 .5,1">

                <Polygon.RenderTransform>
                    <TransformGroup>
                        <RotateTransform Angle="18" />
                        <TranslateTransform X="0" Y="-1" />
                    </TransformGroup>
