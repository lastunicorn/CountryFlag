<Window
    x:Class="DustInTheWind.CountryFlags.Demo.MainWindow"

    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:countryFlags="clr-namespace:DustInTheWind.CountryFlags;assembly=DustInTheWind.CountryFlags"
    xmlns:demo="clr-namespace:DustInTheWind.CountryFlags.Demo"

    mc:Ignorable="d"
    Title="MainWindow"
    Height="450"
    Width="800"
    Background="WhiteSmoke"
    d:DataContext="{d:DesignInstance demo:MainViewModel}">

    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <ListView
            Grid.Column="0"
            ItemsSource="{Binding Countries}"
            SelectedItem="{Binding SelectedCountry}"
            BorderThickness="0">

            <ListView.ItemTemplate>
                <DataTemplate>
                    <DockPanel
                        MinHeight="30">

                        <countryFlags:CountryFlagControl
                            DockPanel.Dock="Left"
                            CountryCode="{Binding CountryCode}"
                            MaxHeight="16"
                            Width="30"
                            Margin="0 0 8 0"
                            BorderThickness="1"
                            BorderBrush="LightGray" />

                        <TextBlock
                            Text="{Binding CountryName}"
                            VerticalAlignment="Center" />

                    </DockPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <GridSplitter
            Grid.Column="1"
            HorizontalAlignment="Stretch"
            Background="LightGray"
            Width="5"
            Margin="3 0" />

        <DockPanel
            Grid.Column="2"
            Margin="30">

            <DockPanel DockPanel.Dock="Top">

                <TextBlock
                    DockPanel.Dock="Left"
                    Text="{Binding SelectedCountry.CountryName}"
                    FontSize="30"
                    VerticalAlignment="Center"
                    TextTrimming="CharacterEllipsis" />

                <TextBlock
                    Text="{Binding SelectedCountry.CountryFullName}"
                    FontSize="26"
                    VerticalAlignment="Center"
                    Margin="15 0 0 0"
                    Foreground="Gray"
                    TextTrimming="CharacterEllipsis" />

            </DockPanel>

            <Control
                DockPanel.Dock="Top"
                Height="40" />

            <countryFlags:CountryFlagControl
                CountryCode="{Binding CountryCode}"
                BorderThickness="2"
                BorderBrush="LightGray" />

        </DockPanel>

        <GridSplitter
            Grid.Column="3"
            HorizontalAlignment="Stretch"
            Background="LightGray"
            Width="5"
            Margin="3 0" />


        <StackPanel
            Grid.Column="4"
            Grid.IsSharedSizeScope="True">

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Key" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Text="Name:" />

                <TextBlock
                    Grid.Column="2"
                    Text="{Binding SelectedCountry.CountryName}" />

            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Key" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Text="Full Name:" />

                <TextBlock
                    Grid.Column="2"
                    Text="{Binding SelectedCountry.CountryFullName}" />

            </Grid>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" SharedSizeGroup="Key" />
                    <ColumnDefinition Width="10" />
                    <ColumnDefinition Width="*" SharedSizeGroup="Value" />
                </Grid.ColumnDefinitions>

                <TextBlock
                    Grid.Column="0"
                    Text="ISO Code Alpha 2:" />

                <TextBlock
                    Grid.Column="2"
                    Text="{Binding SelectedCountry.CountryCode}" />

            </Grid>
        </StackPanel>

    </Grid>

</Window>