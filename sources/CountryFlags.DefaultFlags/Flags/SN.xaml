<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Senegal -->

    <Canvas x:Key="CountryFlag_SN" Width="900" Height="600">

        <Rectangle
            Fill="#FF00853F"
            Width="300"
            Height="600" />

        <Rectangle
            Fill="#FFFDEF42"
            Width="300"
            Height="600"
            Canvas.Left="300" />

        <Rectangle
            Fill="#FFE31B23"
            Width="300"
            Height="600"
            Canvas.Left="600" />

        <!-- Star -->

        <Path
            Data="F1 m 0 -1 0.5878 1.809 -1.5388 -1.118 h 1.902 l -1.5388 1.118 z"
            Fill="#FF00853F">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="100" ScaleY="100" />
                    <TranslateTransform X="450" Y="300" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

    </Canvas>

</ResourceDictionary>