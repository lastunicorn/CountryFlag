<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Vietnam -->

    <Canvas x:Key="CountryFlag_VN" Width="30" Height="20">

        <Rectangle
            Fill="#FFDA251D"
            Width="30"
            Height="20" />

        <Path
            Data="F1 m 0 -.5 .2939 .9045 -.7694 -.559h .951l -.7694 .559 z"
            Fill="#FFFFFF00">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="12" ScaleY="12" />
                    <TranslateTransform X="15" Y="10" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

    </Canvas>

</ResourceDictionary>