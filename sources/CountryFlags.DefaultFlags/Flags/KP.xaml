<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- North Korea -->

    <Canvas x:Key="CountryFlag_KP" Width="72" Height="36">

        <!-- Background -->

        <Rectangle
            Width="72"
            Height="36"
            Canvas.Left="0"
            Canvas.Top="0"
            Fill="#024FA2" />

        <Rectangle
            Width="72"
            Height="24"
            Canvas.Left="0"
            Canvas.Top="6"
            Fill="#ffffff" />

        <Rectangle
            Width="72"
            Height="22"
            Canvas.Left="0"
            Canvas.Top="7"
            Fill="#ED1C27" />

        <!-- Circle -->

        <Ellipse
            Fill="#fff"
            Width="16"
            Height="16"
            Canvas.Left="16"
            Canvas.Top="10" />

        <!-- Star -->

        <Path
            Data="F1 m 0 -.5 .2939 .9045 -.7694 -.559h .951l -.7694 .559 z"
            Fill="#ED1C27">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="15.5" ScaleY="15.5" />
                    <TranslateTransform X="24" Y="18" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

    </Canvas>

</ResourceDictionary>