<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- China -->

    <Canvas x:Key="CountryFlag_CN" Width="30" Height="20">

        <Rectangle
            Fill="#FFEE1C25"
            Width="30"
            Height="20" />

        <!-- Big Star -->

        <Path
