            Fill="#FFFFFF00">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="3" ScaleY="3" />
                    <TranslateTransform X="5" Y="5" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <!-- Star 1 -->

        <Path
            Data="F1 M0,-1L0.587785,0.809017 -0.951057,-0.309017 0.951057,-0.309017 -0.587785,0.809017z"
            Fill="#FFFFFF00">

            <Path.RenderTransform>
                <TransformGroup>
                    <RotateTransform Angle="23.036243" />
                    <TranslateTransform X="10" Y="2" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <!-- Star 2 -->

        <Path
