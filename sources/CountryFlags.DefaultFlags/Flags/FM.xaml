<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Micronesia -->

    <Canvas x:Key="CountryFlag_FM" Width="38" Height="20">

        <Canvas.RenderTransform>
            <TranslateTransform X="19" Y="10" />
        </Canvas.RenderTransform>

        <!-- Background -->

        <Rectangle
            Fill="#FF75B2DD"
            Width="38"
            Height="20"
            Canvas.Left="-19"
            Canvas.Top="-10" />

        <!-- Top Star -->

        <Path
            Data="F1 m 0 -.5 .2939 .9045 -.7694 -.559h .951l -.7694 .559 z"
            Fill="#ffffff">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="4" ScaleY="4" />
                    <TranslateTransform X="0" Y="-6" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <!-- Right Star -->

        <Path
            Data="F1 m 0 -.5 .2939 .9045 -.7694 -.559h .951l -.7694 .559 z"
            Fill="#ffffff">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="4" ScaleY="4" />
                    <TranslateTransform X="0" Y="-6" />
                    <RotateTransform Angle="90" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <!-- Bottom Star -->

        <Path
            Data="F1 m 0 -.5 .2939 .9045 -.7694 -.559h .951l -.7694 .559 z"
            Fill="#ffffff">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="4" ScaleY="4" />
                    <TranslateTransform X="0" Y="-6" />
                    <RotateTransform Angle="180" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <!-- Left Star -->

        <Path
            Data="F1 m 0 -.5 .2939 .9045 -.7694 -.559h .951l -.7694 .559 z"
            Fill="#ffffff">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="4" ScaleY="4" />
                    <TranslateTransform X="0" Y="-6" />
                    <RotateTransform Angle="270" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

    </Canvas>

</ResourceDictionary>