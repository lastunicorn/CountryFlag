<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Solomon Islands -->

    <Canvas x:Key="CountryFlag_SB" Width="200" Height="100">

        <Canvas.RenderTransform>
            <TranslateTransform X="35" Y="30" />
        </Canvas.RenderTransform>

        <!-- Background -->

        <Rectangle
            Fill="#FF215B33"
            Width="200"
            Height="100"
            Canvas.Left="-35"
            Canvas.Top="-30" />

        <Path
            Data="M-35,70L-35,-30 165,-30"
            Fill="#FF0051BA" />

        <Path
            Data="M165,-30L-35,70"
            Fill="#FF000000"
            Stroke="#FFFCD116"
            StrokeThickness="9"
            Clip="M -35 -30 H 165 V 70 H -35 z" />

        <!-- Stars -->

        <Path
            Data="F1 m 0 -1 0.5878 1.809 -1.5388 -1.118 h 1.902 l -1.5388 1.118 z"
            Fill="#FFFFFFFF">

            <Path.RenderTransform>
                <ScaleTransform ScaleX="10" ScaleY="10" />
            </Path.RenderTransform>
        </Path>

        <Path
            Data="F1 m 0 -1 0.5878 1.809 -1.5388 -1.118 h 1.902 l -1.5388 1.118 z"
            Fill="#FFFFFFFF">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="10" ScaleY="10" />
                    <RotateTransform Angle="40.6" />
                    <TranslateTransform X="26" Y="0" />
                    <RotateTransform Angle="-40.6" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <Path
            Data="F1 m 0 -1 0.5878 1.809 -1.5388 -1.118 h 1.902 l -1.5388 1.118 z"
            Fill="#FFFFFFFF">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="10" ScaleY="10" />
                    <RotateTransform Angle="-40.6" />
                    <TranslateTransform X="26" Y="0" />
                    <RotateTransform Angle="40.6" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <Path
            Data="F1 m 0 -1 0.5878 1.809 -1.5388 -1.118 h 1.902 l -1.5388 1.118 z"
            Fill="#FFFFFFFF">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="10" ScaleY="10" />
                    <RotateTransform Angle="40.6" />
                    <TranslateTransform X="-26" Y="0" />
                    <RotateTransform Angle="-40.6" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <Path
            Data="F1 m 0 -1 0.5878 1.809 -1.5388 -1.118 h 1.902 l -1.5388 1.118 z"
            Fill="#FFFFFFFF">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="10" ScaleY="10" />
                    <RotateTransform Angle="-40.6" />
                    <TranslateTransform X="-26" Y="0" />
                    <RotateTransform Angle="40.6" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

    </Canvas>

</ResourceDictionary>