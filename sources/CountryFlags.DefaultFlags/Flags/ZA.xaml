<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- South Africa -->

    <Canvas x:Key="CountryFlag_ZA" Width="90" Height="60">

        <Rectangle
            Fill="#FFDE3831"
            Width="90"
            Height="30" />

        <Rectangle
            Fill="#FF002395"
            Width="90"
            Height="30"
            Canvas.Top="30" />

        <Path
            Data="M0,0L45,30 0,60z"
            Fill="#FF000000" />

        <Canvas Clip="M 0,0 H 90 V 60 H 0 z">

            <Path
                Data="M 45,30 L 0,0 M 45,30 L 0,60 M 45,30 L 90,30"
                Stroke="#FFFFFFFF"
                StrokeThickness="20" />

            <Path
                Data="M 45,30 L 0,0 M 45,30 L 0,60"
                Stroke="#FFFFB612"
                StrokeThickness="20"
                Clip="M 0,0 L 45,30 0,60 z" />

            <Path
                Data="M 45,30 L 0,0 M 45,30 L 0,60 M 45,30 L 90,30"
                Stroke="#FF007A4D"
                StrokeThickness="12" />

        </Canvas>

    </Canvas>

</ResourceDictionary>