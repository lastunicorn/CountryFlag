<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Turkey -->

    <Canvas x:Key="CountryFlag_TR" Width="120" Height="80">

        <!-- Background -->

        <Rectangle
            Width="120"
            Height="80"
            Fill="#FFE30A17" />

        <!-- Moon -->

        <Ellipse
            Width="40"
            Height="40"
            Canvas.Top="20"
            Canvas.Left="20"
            Fill="#FFFFFFFF" />

        <Ellipse
            Width="32"
            Height="32"
            Canvas.Top="24"
            Canvas.Left="29"
            Fill="#FFE30A17" />

        <!-- Star -->

        <Path
            Data="F1 m 0 -.5 .2939 .9045 -.7694 -.559h .951l -.7694 .559 z"
            Fill="#FFFFFFFF">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="20" ScaleY="20" />
                    <RotateTransform Angle="-90" />
                    <TranslateTransform X="65.66" Y="40" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

    </Canvas>

</ResourceDictionary>