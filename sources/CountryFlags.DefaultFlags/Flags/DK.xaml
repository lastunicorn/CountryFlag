<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Denmark -->

    <Canvas x:Key="CountryFlag_DK" Width="37" Height="28">

        <!-- Background -->

        <Rectangle
            Width="37"
            Height="28"
            Canvas.Left="0"
            Canvas.Top="0"
            Fill="#c8102e" />

        <!-- White Cross -->

        <Path
            Fill="#ffffff"
            Data="M 0 12 H 12 V 0 H 16 V 12 H 37 V 16 H 16 V 28 H 12 V 16 H 0 Z" />

    </Canvas>

</ResourceDictionary>