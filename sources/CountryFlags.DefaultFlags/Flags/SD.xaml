<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Sudan -->

    <Canvas x:Key="CountryFlag_SD" Width="6" Height="3">

        <Rectangle
            Width="6"
            Height="1"
            Fill="#D21034" />

        <Rectangle
            Width="6"
            Height="1"
            Canvas.Top="1"
            Fill="#FFFFFF" />

        <Rectangle
            Width="6"
            Height="1"
            Canvas.Top="2"
            Fill="#000000" />

        <Path
            Data="M 0,0 L 2,1.5 0,3 z"
            Fill="#007229" />

    </Canvas>

</ResourceDictionary>