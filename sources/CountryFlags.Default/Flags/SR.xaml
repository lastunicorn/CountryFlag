<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Suriname -->

    <Canvas x:Key="CountryFlag_SR" Width="30" Height="20">

        <!-- Background -->

        <Rectangle
            Width="30"
            Height="20"
            Fill="#377e3f" />

        <Rectangle
            Width="30"
            Height="12"
            Canvas.Top="4"
            Fill="#FFFFFF" />

        <Rectangle
            Width="30"
            Height="8"
            Canvas.Top="6"
            Fill="#b40a2d" />

        <!-- Star -->

        <Path
            Data="F1 m 0 -1 0.5878 1.809 -1.5388 -1.118 h 1.902 l -1.5388 1.118 z"
            Fill="#ecc81d">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="4" ScaleY="4" />
                    <TranslateTransform X="15" Y="10.381966011" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

    </Canvas>

</ResourceDictionary>