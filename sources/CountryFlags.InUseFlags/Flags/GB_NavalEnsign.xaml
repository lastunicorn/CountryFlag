<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- United Kingdom (Naval Ensign) -->

    <Canvas x:Key="CountryFlag_GB_NavalEnsign" Width="720" Height="360">

        <Rectangle
            Fill="#FFFFFFFF"
            Width="720"
            Height="360" />
        
        <Rectangle
            Fill="#FF012169"
            Width="360"
            Height="180" />
        
        <Path
            Data="M0,0L336,156 M0,156L336,0"
            Fill="#FF000000"
            Stroke="#FFFFFFFF"
            StrokeThickness="31.2"
            Clip="M0,0H360V180H0z"/>

        <Path
            Data="M0,0L336,156 M0,156L336,0"
            Fill="#FF000000"
            Stroke="#FFC8102E"
            StrokeThickness="20.8"
            Clip="M0,0V78H360V156H336zM336,0H168V180H0V156z"/>
        
        <Path
            Data="M0,78L360,78 M168,0L168,180"
            Fill="#FF000000"
            Stroke="#FFFFFFFF"
            StrokeThickness="52" />
        
        <Path
            Data="M0,78L360,78 M168,0L168,180"
            Fill="#FF000000"
            Stroke="#FFC8102E"
            StrokeThickness="31.2" />
        
        <Path
            Data="M0,180L720,180 M360,0L360,360"
            Fill="#FF000000"
            Stroke="#FFC8102E"
            StrokeThickness="48" />

    </Canvas>

</ResourceDictionary>