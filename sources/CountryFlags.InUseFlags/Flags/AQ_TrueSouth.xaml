<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Antarctica (True South flag) -->

    <Canvas x:Key="CountryFlag_AQ_TrueSouth" Width="30" Height="18">

        <Path
            Data="F1M0,0L30,0 30,18 0,18"
            Fill="#FFFFFFFF" />

        <Path
            Data="F1M0,0L0,9 10,9 15,1 20,9 15,11 10,9 15,17 20,9 30,9 30,0"
            Fill="#FF1B2F4C" />

    </Canvas>

</ResourceDictionary>