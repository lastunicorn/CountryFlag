<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Bahamas (War Ensign)-->

    <Canvas x:Key="CountryFlag_BS_WarEnsign" Width="180" Height="90">

        <!-- Background -->

        <Rectangle
            Fill="#FFFFFFFF"
            Width="180"
            Height="90" />

        <!-- Top-Left Flag -->

        <Canvas Clip="M 0 0 H 180 V 90 H 0 z">

            <Rectangle
                Fill="#FF00778B"
                Width="84"
                Height="39" />

            <Rectangle
                Fill="#FFFFC72C"
                Width="84"
                Height="13"
                Canvas.Top="13" />

            <Path
                Data="M0,0L0,39 39,39z"
                Fill="#FF000000">

                <Path.RenderTransform>
                    <RotateTransform Angle="-30" CenterX="0" CenterY="39" />
                </Path.RenderTransform>
            </Path>

            <Path
                Data="M0,39L0,0 39,0z"
                Fill="#FF000000">

                <Path.RenderTransform>
                    <RotateTransform Angle="30" />
                </Path.RenderTransform>
            </Path>

        </Canvas>

        <!-- Cross -->

        <Rectangle
            Fill="#c00"
            Width="180"
            Height="12"
            Canvas.Top="39" />

        <Rectangle
            Fill="#c00"
            Width="12"
            Height="90"
            Canvas.Left="84" />

    </Canvas>

</ResourceDictionary>