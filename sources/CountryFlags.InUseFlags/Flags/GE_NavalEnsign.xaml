<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Georgia (Naval Ensign) -->

    <Canvas x:Key="CountryFlag_GE_NavalEnsign" Width="30" Height="20">

        <!-- Background -->

        <Rectangle
            Fill="#FF000066"
            Width="30"
            Height="20" />

        <!-- Red Cross -->

        <Path
            Data="M15,0L15,20 M0,10L30,10"
            Stroke="#FFE8112D"
            StrokeThickness="4" />

        <!-- White Cross -->

        <Path
            Data="M0,0L30,20 M0,20L30,0"
            Stroke="#FFFFFFFF"
            StrokeThickness="4"
            Clip="M 0 0 H 30 V 20 H 0 z" />

    </Canvas>

</ResourceDictionary>