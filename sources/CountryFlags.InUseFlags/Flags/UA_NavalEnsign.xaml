<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Ukraine (Naval Ensign) -->

    <Canvas x:Key="CountryFlag_UA_NavalEnsign" Width="90" Height="60">

        <Rectangle
            Fill="#FFFFFFFF"
            Width="90"
            Height="60" />

        <Path
            Data="M520,400L520,800 680,800 680,0 600,0 600,400z"
            Fill="#FF005BBB">

            <Path.RenderTransform>
                <ScaleTransform ScaleX="0.075" ScaleY="0.075" />
            </Path.RenderTransform>
        </Path>

        <Path
            Data="M600,320L600,400 0,400 0,480C400,480,1200,480,1200,480L1200,320z"
            Fill="#FF005BBB">
            
            <Path.RenderTransform>
                <ScaleTransform ScaleX="0.075" ScaleY="0.075" />
            </Path.RenderTransform>
        </Path>

        <Path
            Data="M45,0L45,60 M0,30L90,30"
            Fill="#FF000000"
            Stroke="#FFFFFFFF"
            StrokeThickness="9" />

        <Path
            Data="M45,0L45,60 M0,30L90,30"
            Fill="#FF000000"
            Stroke="#FF005BBB"
            StrokeThickness="6" />

        <Rectangle
            Fill="#FFFFD500"
            Width="40.5"
            Height="25.5" />

        <Rectangle
            Fill="#FF005BBB"
            Width="40.5"
            Height="12.75" />

    </Canvas>

</ResourceDictionary>