<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Bangladesh (Naval ensign) -->

    <Canvas x:Key="CountryFlag_BD_NavalEnsign" Width="600" Height="300">

        <Rectangle
            Fill="#FFFFFFFF"
            Width="600"
            Height="300" />

        <Rectangle
            Fill="#FF006A4E"
            Width="300"
            Height="150" />

        <Canvas
            RenderTransform="0.5,0,0,0.5,22.5,0">

            <Ellipse
                Fill="#FFF42A41"
                Width="200"
                Height="200"
                Canvas.Left="125"
                Canvas.Top="50" />
        </Canvas>

    </Canvas>

</ResourceDictionary>