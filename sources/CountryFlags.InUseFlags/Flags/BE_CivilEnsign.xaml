<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Belgium (Civil ensign) -->

    <Canvas x:Key="CountryFlag_BE_CivilEnsign" Width="3" Height="2">
        
        <Rectangle
            Width="1"
            Height="2"
            Canvas.Left="0"
            Canvas.Top="0"
            Fill="#000000" />

        <Rectangle
            Width="1"
            Height="2"
            Canvas.Left="1"
            Canvas.Top="0"
            Fill="#fdda25" />

        <Rectangle
            Width="1"
            Height="2"
            Canvas.Left="2"
            Canvas.Top="0"
            Fill="#ef3340" />

    </Canvas>

</ResourceDictionary>