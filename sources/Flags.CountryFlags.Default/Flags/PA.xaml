<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Panama -->

    <Canvas x:Key="CountryFlag_PA" Width="12" Height="8">

        <!-- Background -->

        <Rectangle
            Width="12"
            Height="8"
            Fill="#FFFFFFFF" />

        <!-- Squares -->

        <Rectangle
            Width="6"
            Height="4"
            Fill="#FFDA121A"
            Canvas.Left="6"/>

        <Rectangle
            Width="6"
            Height="4"
            Canvas.Top="4"
            Fill="#FF072357" />

        <!-- Stars -->

        <Path
            Data="F1 m 0 -1 0.5878 1.809 -1.5388 -1.118 h 1.902 l -1.5388 1.118 z"
            Fill="#FFDA121A">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.105572809" ScaleY="1.105572809" />
                    <TranslateTransform X="9" Y="6.105572809" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <Path
            Data="F1 m 0 -1 0.5878 1.809 -1.5388 -1.118 h 1.902 l -1.5388 1.118 z"
            Fill="#FF072357">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="1.105572809" ScaleY="1.105572809" />
                    <TranslateTransform X="3" Y="2.105572809" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

    </Canvas>

</ResourceDictionary>