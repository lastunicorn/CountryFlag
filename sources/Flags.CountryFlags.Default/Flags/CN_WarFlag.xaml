<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- China (War Flag) -->

    <Canvas x:Key="CountryFlag_CN_WarFlag" Width="40" Height="32">

        <!-- Background -->

        <Rectangle
            Fill="#FFEE1C25"
            Width="40"
            Height="32" />

        <!-- Star -->

        <Path
            Data="F1 m 0 -1 0.5878 1.809 -1.5388 -1.118 h 1.902 l -1.5388 1.118 z"
            Fill="#FFFFFF00">

            <Path.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleX="4" ScaleY="4" />
                    <TranslateTransform X="6" Y="8" />
                </TransformGroup>
            </Path.RenderTransform>
        </Path>

        <!-- Eight One -->

        <Path
            Data="M10.204226,11.7L12.004226000000001,9.299999999999999 M13.3,9.3L15.100000000000001,11.700000000000001 M16,10.5L20,10.5"
            Fill="#FFFFFF00"
            Stroke="#FFFFFF00" />

    </Canvas>

</ResourceDictionary>