<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Puerto Rico -->

    <Canvas x:Key="CountryFlag_PR" Width="900" Height="600">

        <Rectangle
            Width="900"
            Height="600"
            Fill="#FFFFFFFF" />

        <Line
            X1="0"
            Y1="60"
            X2="900"
            Y2="60"
            Stroke="#FFEE0000"
            StrokeThickness="120" />

        <Line
            X1="0" 
            Y1="300"
            X2="900"
            Y2="300"
            Stroke="#FFEE0000"
            StrokeThickness="120" />

        <Line
            X1="0"
            Y1="540"
            X2="900"
            Y2="540"
            Stroke="#FFEE0000"
            StrokeThickness="120" />

        <Path
            Data="M0,0L0,600 520,300"
            Fill="#FF0050F0" />

        <Path
            Data="F1 M114,382L173,199 232,382 77,269 269,269"
            Fill="#FFFFFFFF" />

    </Canvas>

</ResourceDictionary>