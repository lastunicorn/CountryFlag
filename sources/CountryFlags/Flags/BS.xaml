<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Bahamas -->

    <ControlTemplate x:Key="CountryFlag_BS">
        <Viewbox Stretch="Uniform">
            <Canvas Width="6" Height="3">

                <Rectangle
                    Width="6"
                    Height="3"
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Fill="#00778b" />

                <Rectangle
                    Width="6"
                    Height="1"
                    Canvas.Left="0"
                    Canvas.Top="1"
                    Fill="#ffc72c" />

                <Path
                    Data="m 2.5981 1.5 L 0 3 V 0 z"
                    Fill="#000000" />

            </Canvas>
        </Viewbox>
    </ControlTemplate>

</ResourceDictionary>