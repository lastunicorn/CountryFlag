                </Canvas>

                <!-- Circle of Stars -->

                <Canvas>
                    <Canvas.RenderTransform>
                        <TranslateTransform X="7200" Y="2400" />
                    </Canvas.RenderTransform>

                    <Path
                        Data="m 0 -1992 81 249 h 261l -211 153 81 249 L 0 -1494 l -212 153 81 -249 -211 -153 h 261 z"
                        Fill="#ffffff" />

