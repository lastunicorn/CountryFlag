<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Cook Islands -->

    <ControlTemplate x:Key="CountryFlag_CK">
        <Viewbox Stretch="Uniform">
            <Canvas Width="9600" Height="4800">

                <Canvas>
                    <Canvas.RenderTransform>
                        <ScaleTransform ScaleX="800" ScaleY="800" />
                    </Canvas.RenderTransform>

                    <!-- Background -->

                    <Rectangle Width="12" Height="6" Canvas.Left="0" Canvas.Top="0" Fill="#012169" />

                    <!-- United Kingdom Flag -->

                    <Path
                        Data="M 0 0 6 3 M 6 0 0 3"
                        Stroke="#ffffff"
                        StrokeThickness="0.6"
                        Clip="M 0 0 H 6 V 3 H 0 z" />

                    <Path
                        Data="M 0 0 6 3 M 6 0 0 3"
                        Stroke="#c8102e"
                        StrokeThickness="0.4"
                        Clip="M 0 0 V 1.5 H 6 V 3 H 6 z M 6 0 H 3 V 3 H 0 V 3 z" />

                    <Path
                        Data="M 3 0 v 3 M 0 1.5 h 6"
                        Stroke="#ffffff" />

                    <Path
                        Data="M 3 0 V 3 M 0 1.5 h 6"
