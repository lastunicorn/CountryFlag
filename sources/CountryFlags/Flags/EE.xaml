<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Estonia -->

    <ControlTemplate x:Key="CountryFlag_EE">
        <Viewbox Stretch="Uniform">
            <Canvas Width="33" Height="21">

                <Rectangle
                    Width="33"
                    Height="7"
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Fill="#0072ce" />

                <Rectangle
                    Width="33"
                    Height="7"
                    Canvas.Left="0"
                    Canvas.Top="7"
                    Fill="#000000" />

                <Rectangle
                    Width="33"
                    Height="7"
                    Canvas.Left="0"
                    Canvas.Top="14"
                    Fill="#ffffff" />

            </Canvas>
        </Viewbox>
    </ControlTemplate>

</ResourceDictionary>