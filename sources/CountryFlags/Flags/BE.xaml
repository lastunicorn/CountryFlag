<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Belgium -->

    <ControlTemplate x:Key="CountryFlag_BE">
        <Viewbox Stretch="Uniform">
            <Canvas Width="900" Height="780">

                <Rectangle
                    Width="300"
                    Height="780"
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Fill="#000000" />

                <Rectangle
                    Width="300"
                    Height="780"
                    Canvas.Left="300"
                    Canvas.Top="0"
                    Fill="#fdda25" />

                <Rectangle
                    Width="300" 
                    Height="780"
                    Canvas.Left="600"
                    Canvas.Top="0"
                    Fill="#ef3340" />

            </Canvas>
        </Viewbox>
    </ControlTemplate>

</ResourceDictionary>