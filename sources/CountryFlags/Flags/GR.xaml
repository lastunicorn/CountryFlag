<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Greece -->

    <ControlTemplate x:Key="CountryFlag_GR">
        <Viewbox Stretch="Uniform">
            <Canvas Width="27" Height="18">

                <Rectangle
                    Width="27"
                    Height="18"
                    Canvas.Left="0"
                    Canvas.Top="0"
                    Fill="#0D5EAF" />

                <Path
                    StrokeThickness="2"
                    Stroke="#ffffff"
                    Data="M 5,0 V 11 M 0,5 H 10 M 10,3 H 27 M 10,7 H 27 M 0,11 H 27 M 0,15 H 27" />

            </Canvas>
        </Viewbox>
    </ControlTemplate>

</ResourceDictionary>