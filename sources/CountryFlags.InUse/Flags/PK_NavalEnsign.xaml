<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Pakistan (Naval Ensign) -->

    <Canvas x:Key="CountryFlag_PK_NavalEnsign" Width="160" Height="80">

        <Canvas.RenderTransform>
            <TranslateTransform X="75" Y="40" />
        </Canvas.RenderTransform>

        <Rectangle
            Fill="#FFFFFFFF"
            Width="160"
            Height="80"
            Canvas.Left="-75"
            Canvas.Top="-40" />

        <Rectangle
            Fill="#FF01411C"
            Width="120"
            Height="80"
            Canvas.Left="-35"
            Canvas.Top="-40" />

        <Canvas>

            <Canvas.RenderTransform>
                <TranslateTransform X="25" Y="0" />
            </Canvas.RenderTransform>

            <Ellipse
                Fill="#FFFFFFFF"
                Width="48"
                Height="48"
                Canvas.Left="-24"
                Canvas.Top="-24" />

            <Canvas>

                <Canvas.RenderTransform>
                    <RotateTransform Angle="-41.63353933657" CenterX="45" CenterY="-40" />
                </Canvas.RenderTransform>

                <Ellipse
                    Fill="#FF01411C"
                    Width="44"
                    Height="44"
                    Canvas.Left="-29"
                    Canvas.Top="-62" />

            </Canvas>

            <!-- Star -->

            <Polygon
                Points="0,-513674 301930,415571 -488533,-158734 488533,-158734 -301930,415571"
                Fill="#FFFFFFFF"
                FillRule="Nonzero">

                <Polygon.RenderTransform>
                    <TransformGroup>
                        <TransformGroup.Children>
                            <ScaleTransform ScaleX="1.557408E-05" ScaleY="1.557408E-05" />
                            <RotateTransform Angle="18" />
                            <TranslateTransform X="16" />
                            <RotateTransform Angle="-41.63354" />
                        </TransformGroup.Children>
                    </TransformGroup>
                </Polygon.RenderTransform>
            </Polygon>

        </Canvas>

    </Canvas>

</ResourceDictionary>